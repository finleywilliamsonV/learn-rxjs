{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:json/recommended"
    ],
    "globals": {
        "NodeJS": true
    },
    "ignorePatterns": [
        "*.json",
        "*.md",
        "*.html",
        "*.ico"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "global-require": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        "import/prefer-default-export": "off",
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "warn",
            120
        ],
        "no-console": "off",
        "no-plusplus": "off",
        "no-unused-vars": "warn",
        "semi": [
            "error",
            "never"
        ],
        "spaced-comment": ["error", "always", { "exceptions": ["-"] }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}